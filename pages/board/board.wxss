/* pages/board/board.wxss */
.slide swiper {
  height: 480rpx;
}

.slide swiper image {
  height: 100%;
  width: 100%;
}

.board{
  background: #F8F9FB;
}

.board-item{
  display: flex;
  flex-direction: column;
  margin: 40rpx 0;
  padding: 20rpx;
  background: #fff;
}

.board-item .title{
  font-size: 20rpx;
  width: 100%;
}

.title image{
  width: 20rpx;
  height: 20rpx;
  float: right;
}

.content{
  height: 300rpx;
}

.inner{
  display: flex;
  flex-direction: row;
  width: 900rpx;
  height: 300rpx;
}

.movie-item{
  width: 180rpx;
  margin: 10rpx;
  font-size: 20rpx;
  text-align: center;
}

.movie-item image{
  width: 180rpx;
  height: 250rpx;
}

/* 头条区域样式 */
.hot-board{
  background: #fff;
  margin: 20rpx 0;
  padding-bottom: 10rpx;
}
.hot-title{
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}

.hot-item{
  width: 94%;
  margin: 0 auto 20rpx;
  display: flex;
}

.item-img{
  width: 300rpx;
  height: 200rpx;
}

.item-img image{
  width: 300rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.item-des{
  width: auto;
  margin: 10rpx 0 10rpx 20rpx;
  font-size: 28rpx;
}



