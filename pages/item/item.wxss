/* pages/item/item.wxss */
.back-img{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  opacity: 0.1;
}

.meta{
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 50rpx 40rpx;
}

.movie-cover{
  width: 100%;
  height: 800rpx;
  margin: 20rpx;
}

.movie-title{
  font-size: 40rpx;
  margin: 30rpx 0  40rpx  0;
  color: #444;
}

.movie-people{
  font-size: 24rpx;
  width: 80%;
  color: #888;
  margin: 10rpx 0;
}

.movie-zhaiyao{
  font-size: 35rpx;
  margin: 80rpx 0 0 0;
  width: 93%;
}

.movie-summary{
  font-size: 24rpx;
  line-height: 50rpx;
  color: #888;
  padding: 1em;
  text-indent:2em;
}